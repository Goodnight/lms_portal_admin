    		$(".courseupload2 li").click(function(){
				var index=$(this).parent().children().index(this);
				$(this).siblings().removeClass("now");
				$(this).addClass("now");
				$(this).parent().parent().next().children().hide();
				$(this).parent().parent().next().children().eq(index).show();
			});
			
			//选择部门
			$(".cls_dep_item").click(function(){
				if($(this).attr("checked")){
					var v = $(this).val();
					var text = $(this).next().text();
					var newItem = "<div><input name='choosedDep' type='checkbox' value='"+v+"' />"+text+"</div>";
					$(this).attr("disabled",true);
					$(".choosecontent").append($(newItem));
				}
			});
			
			//删除已经选择的部门
			$(".cls_delete_dep").click(function(){
				var choosedDeps = $("input:checkbox[name=choosedDep]:checked");
				var cks = $(".cls_dep_item");
				for(i=0;i<choosedDeps.length;i++){
					for(j=0;j<cks.length;j++){
						var choosed = $(choosedDeps[i]).val();
						var v = $(cks[j]).val();	
						if(choosed==v){
							$(choosedDeps[i]).parent().remove();
							$(cks[j]).attr("checked",false);
							$(cks[j]).attr("disabled",false);
						}
					}
				}
			});
			
			//确定部门选择
			$("#btn_dep_ok").click(function(){
				var deps = $("input:checkbox[name=choosedDep]");
